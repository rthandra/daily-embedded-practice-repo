int getSum(int a, int b) {
    //1. addition without carry is ^
    //2. to check carry it is &
    //3. we need to know carry position
    // cast a and b to unsigned because shifting negative numbers give garbage values
    
    while(b){
        unsigned carry =  ((unsigned)a & (unsigned)b) << 1; //carry is always inthe next position
        a = a ^ b;
        b = carry;
        
    }
    return a;
    
    
}
