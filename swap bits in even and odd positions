#include <stdio.h>
/*
EX: 1001 0010 -> 0110 0001
step1: create a mask for odd and even 
step2: OR them by shifting

        0   1     0   0 <<        
     1   0     0    1 >>          0110    0001
*/              
int main()
{
    int val = 0b10010010;
    int oddMask = 0xAA;
    int evenMask = 0x55;
    
    val = (((val & 0xAA) >> 1) | ((val & 0x55) << 1));
    printf("val = %d", val);
    return 0;
}
