#include <stdio.h>

/*
 palindrome - 1221
 not palindrome - 1110

 XOR first and last bits

*/

int main()
{
	int n = 0b10000000;
	int pos = 7;

	while(pos > 0) {

		int right = ((n >> pos) & 1); //move to right and then check
		int left = ((n >> (7-pos)) & 1);

		if (left != right) {
			printf("not palindrome");
			return 0;
		}
		
		else {
			pos --;
		}

	}
	
	printf("is palindrome");
	return 0;
};
