/* Next smallest / next largest with same # of 1 bits
add and sub each number to match with count
*/

#include <stdio.h>

int bitcount(int x){
    int c = 0;
    
    while(x){
        
        if(x&1){
            c++;
        }
        x=x>>1;
    }
    return c;
}

 int largest(int n){
    
    int largestn = n+1;
    
    while(bitcount(largestn) != bitcount(n))
    {
        largestn++;
    }
    
   return largestn;
}

int smallest(int n){
    
    int smallestn = n-1;
    
    while(bitcount(smallestn) != bitcount(n)){
        smallestn--;
    }
    return smallestn;
}

int main()
{
    int n = 0b11000000 ;
    
    int next = largest(n);
    int previous = smallest(n);
    
    printf("largest next = %x\n", next);
    printf("smallest prev = %x", previous);

    return 0;
}
