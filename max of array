void max(int *arr, int size){
    
    int max = 0;
    
    for(int i = 0; i < size - 1; i++){
        if(arr[i] > arr[i + 1]){
            max = arr[i];
        }
    }
    printf("max = %d", max);
}

int main(){
    
    int arr[] = {1,2,3,4,4,5,8,5};
    int size = sizeof(arr)/sizeof(arr[0]);
    
    max(arr, size);

    return 0;
}
