#include <stdio.h>

#define UART_DR (*(volatile uint32_t*)0x404065670) //UART data register
#define UART_SR (*(voltile uint32_t*)0x5478949049) //status register
#define UART_SR_MASK (1<<7) //if bit is set then we know its empty and can be used

void uart_send_char(char c) {
    
    if(UART_SR & UART_SR_MASK){
        UART_DR = (uint32_t)c;
    }
    else{
        
    }
}
