*
- Check if a String Contains all binary codes of size k
*/
#include <stdio.h>
#include <string.h>

int main()
{
    char s[] = {"00110110"};
    int k = 2;

    //step 1: count how many binary codes is possible. 2 ^ k
    
    int count = 1<<k;
    int n = strlen(s);
    int mask = 0;
    
    //step2: loop through the string, save every substring k -> second loop
    for(int i = 0; i <= n-k; i++){ //n-k so it stops before the last possible substring
        int num = 0;
        for(int j = 0; j < k; j++){ //calculates substring of size k
        num = ((num << 1) | s[i+j] - '0'); //i+j value in the index,j goes 0,1,  (num << 1) is the decimal representation of the number,s[i+j] is a character, '0' or '1' (ASCII 48 or 49).
        }
        mask |= (1 << num); //step3: create mask for all the bits to get count
    }
    
    // step4: check if count is equal to mask
    
    if(mask == (1<<count)-1){
        printf("contains all binary codes ");
    }
    
    else{
        printf("not all binary codes");
    }
    
   
    return 0;
}
